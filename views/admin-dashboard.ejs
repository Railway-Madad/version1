<body>

  <nav class="navbar">
    <div class="container nav-container">
      <a href="/" class="logo">
        <i class="fas fa-train"></i> Rail Madad
      </a>
      <div class="nav-right">
        <a href="/admin" class="btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
    </div>
  </nav>

  <div class="welcome-banner">
    <div class="container">
      <h1><i class="fas fa-user-shield"></i> Welcome, <%= adminDetails.username %></h1>
    </div>
  </div>

  <div class="dashboard">
    <!-- Admin Action Buttons -->
    <div class="admin-actions">
      <button class="admin-btn" onclick="openNewsModal()">
        <i class="fas fa-newspaper"></i> Publish News
      </button>
      <button class="admin-btn" onclick="openStaffModal()">
        <i class="fas fa-user-plus"></i> Register New Staff
      </button>
    </div>

    <div class="dashboard-card">

      <h2 class="card-title">Statistics</h2>

      <div class="dashboard-card">
        <h2 class="card-title">Complaint Status Distribution</h2>
        <canvas id="complaintStatusChart"></canvas>
      </div>

      <div class="dashboard-card">
        <h2 class="card-title">Add News</h2>
        <form action="/news/upload" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="description">News Description</label>
            <textarea id="description" name="description" rows="4" placeholder="Enter description..." required></textarea>
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/*" required />
          </div>
          <button type="submit" class="btn">Submit News</button>
        </form>
      </div>
      

      <div class="stats-grid">
        <div class="stat-card">
          <div class="number" id="total-complaints"><%= totalComplaints %></div>
          <div class="label">Total Complaints</div>
        </div>
        <div class="stat-card pending">
          <div class="number" id="pending-complaints"><%= pendingComplaints %></div>
          <div class="label">Pending Complaints</div>
        </div>
        <div class="stat-card resolved">
          <div class="number" id="resolved-complaints"><%= resolvedComplaints %></div>
          <div class="label">Resolved Complaints</div>
        </div>
        <div class="stat-card">
          <div class="number" id="total-users"><%= totalUsers %></div>
          <div class="label">Total Users</div>
        </div>
      </div>
    </div>

    <div class="dashboard-card">
      <h2 class="card-title">Complaint Status Distribution</h2>
      <div class="chart-container">
        <canvas id="complaintStatusChart"></canvas>
      </div>
    </div>

    <div class="dashboard-card">
      <h2 class="card-title">Recent Complaints (5 Most Recent)</h2>
      <table class="complaints-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Description</th>
            <th>Status</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% complaints.forEach(complaint => { %>
            <tr>
              <td><%= complaint._id %></td>
              <td><%= complaint.username || complaint.user?.name || "N/A" %></td>
              <td><%= complaint.description %></td>
              <td>
                <% if (complaint.status === 'pending') { %>
                  <span class="status-badge status-pending">Pending</span>
                <% } else if (complaint.status === 'resolved') { %>
                  <span class="status-badge status-resolved">Resolved</span>
                <% } else if (complaint.status === 'closed') { %>
                  <span class="status-badge status-closed">Closed</span>
                <% } else { %>
                  <%= complaint.status %>
                <% } %>
              </td>
              <td><%= new Date(complaint.createdAt).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="dashboard-card">
      <h2 class="card-title">Feedback Statistics</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="number"><%= totalFeedbacks %></div>
          <div class="label">Total Feedbacks</div>
        </div>
        <div class="stat-card resolved">
          <div class="number"><%= averageRating %> / 5</div>
          <div class="label">Average Rating</div>
        </div>
      </div>
    
      <% if (Object.keys(feedbackByCategory).length > 0) { %>
        <h3 style="margin-top: 25px; margin-bottom: 15px; color: var(--primary-color);">Feedback by Category</h3>
        <table class="complaints-table">
          <thead>
            <tr>
              <th>Category</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <% Object.entries(feedbackByCategory).forEach(([cat, count]) => { %>
              <tr>
                <td><%= cat %></td>
                <td><%= count %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>

    <div class="dashboard-card feedback-section">
        <h2 class="card-title">Latest Feedback (10 Most Recent)</h2>
        <% feedbacks.slice(0, 10).forEach(feedback => { %>
          <div class="feedback-item">
            <p><strong>Name:</strong> <%= feedback.fullname %></p>
            <p><strong>Rating:</strong> <%= feedback.rating %> / 5</p>
            <p><strong>Feedback:</strong> <%= feedback.feedback %></p>
          </div>
        <% }) %>
        
        <% if (feedbacks.length === 0) { %>
          <div class="feedback-item">
            <p>No feedback available at this time.</p>
          </div>
        <% } %>
      </div>
  <footer>
    <div class="container">
      <p>© <%= new Date().getFullYear() %> Rail Madad - Indian Railways. All Rights Reserved.</p>
    </div>
  </footer>

  <!-- Publish News Modal -->
  <div id="newsModal" class="modal">
    <div class="modal-content">
      <span class="close-modal" onclick="closeNewsModal()">×</span>

      <div class="modal-header">
        <h2><i class="fas fa-newspaper"></i> Publish News</h2>
      </div>
      <form class="modal-form" id="publishNewsForm">
        <div>
          <label for="newsTitle">News Title</label>
          <input type="text" id="newsTitle" name="title" required placeholder="Enter news title">
        </div>
        <div>
          <label for="newsContent">News Content</label>
          <textarea id="newsContent" name="content" required placeholder="Enter news content"></textarea>
        </div>
        <div>
          <label for="newsCategory">Category</label>
          <select id="newsCategory" name="category">
            <option value="announcement">Announcement</option>
            <option value="update">Update</option>
            <option value="alert">Alert</option>
            <option value="general">General</option>
          </select>
        </div>
        <div>
          <label for="publishDate">Publish Date</label>
          <input type="date" id="publishDate" name="publishDate" required>
        </div>
        <button type="submit">Publish News</button>
      </form>
    </div>
  </div>

  <!-- Register Staff Modal -->
  <div id="staffModal" class="modal">
    <div class="modal-content">
      <span class="close-modal" onclick="closeStaffModal()">×</span>

      <div class="modal-header">
        <h2><i class="fas fa-user-plus"></i> Register New Staff</h2>
      </div>
      <form class="modal-form" id="registerStaffForm" action="/admin/register-staff" method="POST">
        <div>
          <label for="staffUsername">Username</label>
          <input type="text" id="staffUsername" name="username" required placeholder="Enter username">
        </div>
        <div>
          <label for="staffPassword">Password</label>
          <input type="password" id="staffPassword" name="password" required placeholder="Enter password">
        </div>
        <div>
          <label for="staffDomain">Domain</label>
          <select id="staffDomain" name="domain" required>
            <option value="">Select domain</option>
            <option value="admin">Admin</option>
            <option value="ticketing">Ticketing</option>
            <option value="cleaning">Cleaning</option>
            <option value="security">Security</option>
            <option value="maintenance">Maintenance</option>
          </select>
        </div>
        <button type="submit">Register Staff</button>
      </form>
    </div>
  </div>
  <!-- Success Popup -->
<div id="successPopup">News uploaded successfully!</div>


</body>
<script>

  //news 
  document.querySelector('form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);

    fetch('/news/upload', {
      method: 'POST',
      body: formData,
    })
    .then(response => response.json())
    .then(data => {
      alert(data.message);
      // Optionally reload or update the page with the new data
    })
    .catch(error => {
      console.error('Error uploading news:', error);
    });
  });
  // Show the success popup
function showSuccessPopup() {
  const popup = document.getElementById('successPopup');
  popup.classList.add('show');
  
  // Hide the popup after 3 seconds
  setTimeout(() => {
    popup.classList.remove('show');
  }, 3000);
}


  // Real-time update logic for pie chart and integer fields
  function updateComplaints() {
    fetch('/complaints/all')
      .then(async response => {
        if (!response.ok) {
          const errorText = await response.text();
          throw new Error(`Failed to fetch complaints: ${response.status} - ${errorText}`);
        }
        return response.json();
      })
      .then(data => {
        console.log('Fetched complaints:', data); // Debug log
        const complaints = data.complaints || [];

        // Update statistics
        const totalComplaints = complaints.length;
        const pendingComplaints = complaints.filter(c => c.status === 'pending').length;
        const resolvedComplaints = complaints.filter(c => c.status === 'resolved').length;

        document.getElementById('total-complaints').textContent = totalComplaints;
        document.getElementById('pending-complaints').textContent = pendingComplaints;
        document.getElementById('resolved-complaints').textContent = resolvedComplaints;

        // Update pie chart
        complaintChart.data.datasets[0].data = [pendingComplaints, resolvedComplaints];
        complaintChart.update();
      })
      .catch(error => {
        console.error('Error updating complaints:', error);
      });
  }

  // Initial fetch
  updateComplaints();

  // Set interval for real-time updates every 2000ms
  const updateInterval = setInterval(updateComplaints, 2000);

  // Clean up interval on page unload
  window.addEventListener('unload', () => {
    clearInterval(updateInterval);
  });

  // Chart configuration
  const ctx = document.getElementById('complaintStatusChart').getContext('2d');

  const complaintChart = new Chart(ctx, {
    type: 'pie',
    data: {
      labels: ['Pending', 'Resolved'],
      datasets: [{
        label: 'Complaint Status',
        data: [<%= pendingComplaints %>, <%= resolvedComplaints %>],
        backgroundColor: ['#f39c12', '#27ae60'],
        borderColor: ['#fff', '#fff'],
        borderWidth: 2
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            font: {
              size: 14
            },
            padding: 20
          }
        },
        title: {
          display: true,
          text: 'Complaints by Status',
          font: {
            size: 16,
            weight: 'bold'
          },
          padding: {
            top: 10,
            bottom: 20
          }
        }
      }
    }
  });

  // Modal functionality
  function openNewsModal() {
    document.getElementById('newsModal').style.display = 'block';
    // Set today's date as default
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('publishDate').value = today;
  }

  function closeNewsModal() {
    document.getElementById('newsModal').style.display = 'none';
  }

  function openStaffModal() {
    document.getElementById('staffModal').style.display = 'block';
  }

  function closeStaffModal() {
    document.getElementById('staffModal').style.display = 'none';
  }

  // Close modals when clicking outside
  window.onclick = function(event) {
    const newsModal = document.getElementById('newsModal');
    const staffModal = document.getElementById('staffModal');
    
    if (event.target === newsModal) {
      closeNewsModal();
    }
    if (event.target === staffModal) {
      closeStaffModal();
    }
  }
</script>

